/* component/iModal/index.wxss */

.mask_layer {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 999;
  left: 0;
  top: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  
}

.modal_box {
  width: 76%;
  height: 80vh;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1001;
  background: #fafafa;
  margin: 15% 10% 0 10%;
  border-radius: 3px;
  padding: 2%;
  color: #666;
  font-size: 26rpx;
  
}

.title {
  padding: 15px;
  text-align: center;
  background-color: gazure;
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}

.content {
  overflow-y: scroll;
  height: 65vh;
  /*超出父盒子高度可滚动*/
}

.input_show1 {
  margin: 0 auto;
  width: 80%;
  margin-left: 10%;
  font-size: 32rpx;
  text-align: center;
}
.margin-top{
  margin-top: 20rpx;
}

.btn1 {
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: white;
}

.close {
  flex-grow: 1;
  padding: 10px;
  text-align: center;
  color: black;
  border: 1px solid #999; 
  border-radius: 36rpx;  
}

.sure {
  flex-grow: 1;
  padding: 10px;
  color: white;
  background-color: rgb(207, 79, 142);
  border-radius: 36rpx;
  border-left: 1px solid #d0d0d0;
  text-align: center;
  margin-left: 40rpx;
}


.modalMsg {
  text-align: center;
  margin-top: 45rpx;
  display: block;
}

.color-black {
  color: #333333;
}

.underline {
  text-decoration-line: underline;
}
.font-bold{
  font-weight: bold;
}

.paragraph {
  text-indent:2em;
  margin-top: 10rpx;
}
