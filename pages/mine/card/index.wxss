/* pages/mine/card/index.wxss */
.container{
  padding: 0 40rpx;
}
.card-top{
  padding: 40rpx 0;
  display: inline-block;
  width: 100%;
}
.card-top .title{
  font-size: 40rpx;
  float: left;
}
.card-top .add-btns{
  float: right;
  width: 60rpx;
  height: 60rpx;
  background: #DC5096;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius:100%;
  color: #fff; 
}
.card-top .add-btns:active{
  opacity: 0.6;
}
.card-warp{
  display: inline-block;
  width: 100%;
}
.card-warp .item{
  margin-bottom: 30rpx;
  border: solid 1rpx #ddd;
  border-radius:30rpx; 
  padding: 40rpx;
  display: flex;
  position: relative;
}

.card-warp .item .icon{
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #DC5096;
  border-radius:100%; 
  font-size: 30rpx;
  color: #fff;
}
.card-warp .item .content{
  flex: 1;
  padding: 0 0 0 40rpx;
  font-size: 30rpx;
}

.card-warp .item .content .name{
  font-size: 40rpx;
}

.card-warp .item .content .type{
  font-size: 28rpx;
  color: #999;
  margin: 20rpx 0;
}
.card-warp .item .content .card-no text{
  margin: 0 30rpx 0 0;
}