/**index.wxss**/
page,.container{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
image{
  width: 100%;
  height: 100%;
}
.scan-btns{
  position: fixed;
  bottom: 100rpx;
  width: calc(100% - 300rpx);
  left: 150rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #DC5096;
  border-radius:100rpx;
  color: #fff; 
  font-size: 36rpx;
}
.scan-btns:active{
  opacity: 0.6;
}